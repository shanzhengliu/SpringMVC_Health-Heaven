<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.sam.pojo.PostEntity" table="5619_Posts" schema="elec5619">
        <id name="id">
            <column name="post_ID" sql-type="int(11)"/>
        </id>
        <property name="tag">
            <column name="tags" sql-type="varchar(150)" length="150"/>
        </property>
        <property name="title">
            <column name="title" sql-type="varchar(150)" length="150"/>
        </property>
        <property name="content">
            <column name="content" sql-type="text"/>
        </property>

    </class>
</hibernate-mapping>